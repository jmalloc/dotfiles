# Note: This requires the GNU version of less to be installed via brew,
# otherwise --quit-if-one-screen causes the Apple version of less to exit
# without showing anything at all.
export LESS="--quit-if-one-screen --hilite-search --hilite-unread --ignore-case --LONG-PROMPT --RAW-CONTROL-CHARS --chop-long-lines  --window=-4"
