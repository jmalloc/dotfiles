[user]
    name = James Harris
    email = james.harris@icecave.com.au

[core]
    autocrlf = input
    excludesfile = ~/.gitignore.global
    whitespace = trailing-space,space-before-tab,tab-in-indent,tabwidth=4
	editor = subl -w

[diff]
    renames = true

[help]
    autocorrect = 10

[color]
    ui = auto

[color "diff"]
  meta = dim bold
  frag = dim
  old = red
  new = green

[color "status"]
    added = green
    changed = yellow
    untracked = red

[push]
    default = simple

[tag]
    sort = version:refname

[github]
    user = jmalloc

[ghi]
    token = !security find-internet-password -a jmalloc -s github.com -l 'ghi token' -w

[filter "lfs"]
    smudge = git-lfs smudge %f
    required = true
    clean = git-lfs clean %f

[format]
   pretty = %C(dim)%ci %C(dim)%p %C(cyan)%h%C(reset) %C(yellow)|%C(reset) %s%C(cyan)%d%C(reset) %C(dim)by %an %ar.%C(reset)

[alias]
    ;log = log --topo-order
    ;show = show -m
    d = diff
    dc = diff --cached
    s = status -bs
    c = commit -m
    l = log --pretty='%C(dim cyan)%h%C(reset) %s%C(cyan)%d%C(reset) %C(dim)by %an %ar' --first-parent -20
    g = log --pretty='%C(dim cyan)%h%C(reset) %s%C(cyan)%d%C(reset) %C(dim)by %an %ar' --graph
    a = add
    aa = add -A
    p = "!git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)"
    pt = push --all --follow-tags
    u = pull --rebase
    b = branch
    m = merge --no-ff
    ff = merge --ff-only
    co = checkout
    cm = "!git checkout $(basename $(git symbolic-ref refs/remotes/origin/HEAD))"
    unstage = reset HEAD --
